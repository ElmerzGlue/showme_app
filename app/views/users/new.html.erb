<% provide(:page_title, 'Sign Up') %>
<h1 class="title-panel container">Registration</h1>

<div class="container content-panel">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(:new_user, url: signup_path) do |f| %>
			<%= render 'shared/errors' %>

			<%= f.label :email, "Faculty Advisor Email" %>
			<%= f.email_field :email, class: 'form-control' %>

			<%= f.label :name, "Faculty Advisor Name" %>
			<%= f.text_field :name, class: 'form-control' %>

			<%= f.label :phone, "Faculty Advisor Phone" %>
			<%= f.telephone_field :phone, class: 'form-control' %>

			<%= f.label :school %>
			<%= f.text_field :school, class: 'form-control' %>

			<%= f.label :num_teams, "Number of Teams" %>
			<%= f.number_field :num_teams, class: 'form-control' %>

			<%= f.label :password %>
			<%= f.password_field :password, class: 'form-control' %>

			<%= f.label :password_confirmation, "Confirm Password" %>
			<%= f.password_field :password_confirmation,
				class: 'form-control' %>

			<%= f.submit "Register!", class: "btn btn-primary" %>

		<% end %>
	</div>
</div>


