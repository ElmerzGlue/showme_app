<header class="navbar">
	<nav>
  		<div class="container row">
  			<ul class="nav navbar-nav">
  				<li><%= link_to "Home", root_path %></li>
  				<li><%= link_to "About", about_path %></li>
  				<li><%= link_to "Contact", contact_path %></li>

          <% unless logged_in? %>
            <li><%= link_to "Login", login_path %></li>
