            <li><%= link_to "Profile", profile_path %></li>
            <li><%= link_to "Logout", logout_path, method: :delete%></li>
          <% end %>

          <% if current_user&.admin? %>
            <li><%= link_to "Management", list_path %></li>
          <% end %>
        </ul>
  		</div>
	</nav>
</header>