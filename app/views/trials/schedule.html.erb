<% provide(:page_title, "Schedule") %>

<div class="container title-panel">Schedule</div>

<div class="container content-panel">
    <table class="table">
        <thead>
            <tr>
                <th>Round</th>
                <th style='text-align:center'>Plaintiff</th>
                <th></th>
                <th style='text-align:center'>Defense</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% Trial.all.each do |trial| %>
                <% if !trial.scored %>
                    <tr>
                        <td><%= trial.round %></td>
                        <td align='center'><%= trial.p_team.team_identifier %></td>
                        <td align='center'>VS.</td>
                        <td align='center'><%= trial.d_team.team_identifier %></td>
                        <td><%= button_to "Score", {controller: 'trials', action: 'score', id: trial.id}, method: :get %></td>
                    </tr>
                <% end %>
            <% end %>
        </tbody>
    </table>
    <%= button_to( "Schedule Trials", trials_schedule_path, method: :get) %>
</div>